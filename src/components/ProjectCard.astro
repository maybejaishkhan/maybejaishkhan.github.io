---
interface Props {
	id: string;
	title: string;
	description: string;
	detailedDescription: string;
	projectLink: string;
}

const { id, title, description, detailedDescription, projectLink } =
	Astro.props;
---

<!-- Card Button -->
<button
	class="bg-white shadow-md rounded-lg p-4 hover:shadow-lg transition-shadow text-left"
	onclick={`document.getElementById('modal-${id}').showModal()`}>
	<h3 class="text-xl font-semibold mb-2">{title}</h3>
	<p class="text-gray-600">{description}</p>
</button>

<!-- Modal -->
<dialog id={`modal-${id}`} class="modal rounded-lg p-0 backdrop:bg-black/50">
	<div class="p-8 max-w-2xl">
		<h2 class="text-2xl font-bold mb-4">{title}</h2>
		<p class="mb-4">{detailedDescription}</p>
		<div class="flex gap-4">
			<a href={projectLink} class="bg-blue-500 text-white px-4 py-2 rounded"
				>View Project</a
			>
			<button
				class="bg-gray-200 px-4 py-2 rounded"
				onclick={`document.getElementById('modal-${id}').close()`}>
				Close
			</button>
		</div>
	</div>
</dialog>

<style>
	.modal::backdrop {
		animation: fade-in 0.3s ease;
	}
	.modal[open] {
		animation: slide-in 0.3s ease;
	}
	@keyframes fade-in {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
	@keyframes slide-in {
		from {
			transform: translateY(-10%);
			opacity: 0;
		}
		to {
			transform: translateY(0);
			opacity: 1;
		}
	}
</style>
