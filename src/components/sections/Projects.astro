<style>
    .modal::backdrop {
        animation: fade-in 0.3s ease;
    }
    .modal[open] {
        animation: slide-in 0.3s ease;
    }
    @keyframes fade-in {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    @keyframes slide-in {
        from { transform: translateY(-10%); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }
</style>